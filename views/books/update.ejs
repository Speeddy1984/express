<%- include('../port/layout-start', { title: title }) %>

<h1 class="my-4"><%= title %></h1>
<form action="/books/<%= book.id %>/edit" method="POST">
    <div class="mb-3">
        <label for="title" class="form-label">Название</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= book.title %>" required>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Описание</label>
        <textarea class="form-control" id="description" name="description"><%= book.description %></textarea>
    </div>
    <div class="mb-3">
        <label for="authors" class="form-label">Автор</label>
        <input type="text" class="form-control" id="authors" name="authors" value="<%= book.authors %>" required>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="favorite" name="favorite" value="true" <%= book.favorite ? 'checked' : '' %>>
        <label class="form-check-label" for="favorite">Избранное</label>
    </div>
    <div class="mb-3">
        <label for="fileCover" class="form-label">Обложка</label>
        <input type="text" class="form-control" id="fileCover" name="fileCover" value="<%= book.fileCover %>">
    </div>
    <div class="mb-3">
        <label for="fileName" class="form-label">Имя файла</label>
        <input type="text" class="form-control" id="fileName" name="fileName" value="<%= book.fileName %>">
    </div>
    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    <a href="/books" class="btn btn-secondary">Назад к списку</a>
</form>

<%- include('../port/layout-end') %>
