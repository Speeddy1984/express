<%- include('./port/layout-start', { title: title }) %>

<% if (books.length > 0) { %>
    <h1 class="my-4"><%= title %></h1>
    <ul class="list-group">
        <% books.forEach(book => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a class="text-decoration-none text-reset" href="/books/<%= book.id %>"><%= book.title %></a>
                <a href="/books/<%= book.id %>/edit" class="btn btn-primary btn-sm">Редактировать</a>
            </li>
        <% }); %>
    </ul>
<% } else { %>
    <h3 class="mt-5">Книги отсутствуют</h3>
<% } %>

<a href="/books/create" class="btn btn-success mt-4">Добавить книгу</a>
<%- include('./port/layout-end') %>
